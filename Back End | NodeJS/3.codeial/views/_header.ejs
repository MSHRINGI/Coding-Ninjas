
<link rel="stylesheet" href="/css/header.css">

<header>
    
    <div class="container-fluid">
        <div class="row d-flex justify-content-between">
            <div class="col-2">
                <a href="/"><button type="button" class="btn btn-dark m-2">Home</button></a>
            </div>
            <div class="col-3">
                <% if(locals.user) {%>
                    <div class="col-12">
                        <a href="/users/profile/<%= locals.user.id %>"><button type="button" class="btn btn-success m-2"><%= user.name%></button></a>
                        <a href="/users/sign-out"><button type="button" class="btn btn-warning m-2">Sign Out</button></a>
                    </div>
                <%} else {%>
                    <div class="col-12">
                        <a href="/users/sign-in"><button type="button" class="btn btn-primary m-2">Sign In</button></a>
                        <a href="/users/sign-up"><button type="button" class="btn btn-secondary m-2">Sign Up</button></a>
                    </div>
                <%}%>            
            </div>
        </div>
    </div>
    
</header>