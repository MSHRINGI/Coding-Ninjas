<link rel="stylesheet" href="<%= assetPath('css/user.css') %>">

<h1>
    <p>Profile page.</p>
</h1>

<img src="<%= user.avatar %>" alt="<%= user.name %>" id="profilePicture">

<% if(user.id == profile_user.id){ %>
    <p><%= profile_user.name %></p>
    <p><%= profile_user.email %></p>
    <form action="/users/update/<%= user.id %>" enctype="multipart/form-data" method="post">
        <input type="text" name="name" placeholder="<%= profile_user.name %>" required>
        <input type="email" name="email" placeholder="<%= profile_user.email%>" required>
        <input type="file" name="avatar" placeholder="Profile Picture">
        <button type="submit">Update</button>
    </form>
<% }else{ %>
    <p><%= profile_user.name %></p>
    <p><%= profile_user.email %></p>
<% } %>

